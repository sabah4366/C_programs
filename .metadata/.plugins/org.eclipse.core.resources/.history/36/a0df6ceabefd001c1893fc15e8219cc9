#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int i,j,k,l=1,m=3,limit;
	printf("enter the limit");
	scanf("%d",&limit);
	for(i=1;i<=limit;i++)
	{
		for(j=1;j<=m;j++)
		{
			printf("*");
			printf("\n");
			m=m+3;

		}

		for(k=1;k<=l;k++)
		{
			printf("*");
			printf("\n");
			l=l+1;
		}
	}


	return EXIT_SUCCESS;
}
